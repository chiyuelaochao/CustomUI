<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/save_restore_basic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="save/restore/basic"/>

        <Button
            android:id="@+id/save_restore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="save/restore"/>

        <Button
            android:id="@+id/save_restore_layer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="save/restore/layer"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.caiwei.customui.canvas.SaveRestoreBasicView
            android:id="@+id/sava_restore_basic_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.caiwei.customui.canvas.SaveRestoreView
            android:id="@+id/sava_restore_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <com.caiwei.customui.canvas.SaveRestoreLayerView
            android:id="@+id/sava_restore_layer_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <Button
        android:id="@+id/official_demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Official Demo"/>

    <Button
        android:id="@+id/round_image_destin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Round Image DESTIN"/>

    <Button
        android:id="@+id/heart_map_destin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heart Map DESTIN"/>

    <Button
        android:id="@+id/radar_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Radar View"/>

    <Button
        android:id="@+id/inverted_image_destin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inverted Image DESTIN"/>

    <Button
        android:id="@+id/irregular_wave_destin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Irregular Wave DESTIN"/>
</LinearLayout>
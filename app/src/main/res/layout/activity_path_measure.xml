<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="3dp">

            <Button
                android:id="@+id/path_measure_basic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basic"/>

            <Button
                android:id="@+id/arrow_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arrow"/>

            <Button
                android:id="@+id/wave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wave"/>

            <Button
                android:id="@+id/circle_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="circle loading"/>

            <Button
                android:id="@+id/face_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="face loading"/>

            <Button
                android:id="@+id/trash_can"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="trash can"/>
        </LinearLayout>
    </HorizontalScrollView>

    <com.caiwei.customui.path.PathMeasureBasicView
        android:id="@+id/path_measure_basic_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.caiwei.customui.path.ArrowCircleView
        android:id="@+id/arrow_circle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <com.caiwei.customui.path.WaveView
        android:id="@+id/wave_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <com.caiwei.customui.path.FaceLoadingView
        android:id="@+id/face_loading_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/circle_loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="start"/>

        <Button
            android:id="@+id/end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="end"/>

        <com.caiwei.customui.path.CircleLoadingView
            android:id="@+id/circle_loading_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/trash_can_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/trash_can_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="click me"/>

        <com.caiwei.customui.path.TrashCanView
            android:id="@+id/trash_can_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
